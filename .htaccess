# PHP Settings
php_value max_execution_time 300
php_value max_input_time 300
php_value memory_limit 256M
php_flag display_errors on
php_value error_reporting E_ALL

# Enable URL rewriting
RewriteEngine On

# Set the base directory (adjust if your site is in a subdirectory)
RewriteBase /hearts-after-god-ministry-site/

# If the requested file/directory exists, use it directly
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Handle front controller pattern
RewriteRule ^(.*)$ index.php [QSA,L]

# Default route - serve index.html for the root URL
RewriteRule ^$ frontend/pages/index.html [L]

# Handle 404 errors
ErrorDocument 404 /frontend/pages/404.html