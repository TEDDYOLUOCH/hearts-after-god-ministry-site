<?php
/**
 * Blog Management Dashboard
 */

// Enable error reporting for debugging
error_reporting(E_ALL);
ini_set('display_errors', 1);
ini_set('log_errors', 1);
ini_set('error_log', __DIR__ . '/php_errors.log');

// Set the current page for the header
$_GET['page'] = 'blog';

// Include the admin layout
require_once __DIR__ . '/includes/admin_layout.php';

// Include the blog management functions
require_once __DIR__ . '/../backend/users/admin_manage_blog.php';

// Function to get blog management content
function getBlogManagementContent($pdo) {
    // Start output buffering
    ob_start();
    
    // Get any success/error messages from session
    $success = $_SESSION['success'] ?? null;
    $error = $_SESSION['error'] ?? null;
    
    // Clear the messages from session
    unset($_SESSION['success'], $_SESSION['error']);
    ?>
    <div class="container mx-auto px-4 py-8">
        <?php if ($success): ?>
            <div class="mb-6 rounded-md bg-green-50 p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-green-800"><?= htmlspecialchars($success) ?></p>
                    </div>
                </div>
            </div>
        <?php endif; ?>
        
        <?php if ($error): ?>
            <div class="mb-6 rounded-md bg-red-50 p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-red-800"><?= htmlspecialchars($error) ?></p>
                    </div>
                </div>
            </div>
        <?php endif; ?>
        
        <?php
        // Get the current action
        $action = $_GET['action'] ?? 'list';
        
        // Include the appropriate view based on action
        $viewPath = __DIR__ . '/../backend/views/admin/';
        
        if (isset($_GET['action']) && $_GET['action'] === 'edit') {
            include $viewPath . 'blog_form.php';
        } else if (isset($_GET['action']) && $_GET['action'] === 'add') {
            include $viewPath . 'blog_form.php';
        } else {
            include $viewPath . 'blog_list.php';
        }
        ?>
    </div>
    <?php
    return ob_get_clean();
}

// Render the page using the admin layout
renderAdminLayout('Blog Management', 'getBlogManagementContent');
?>
